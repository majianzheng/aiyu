<assembly xmlns="http://maven.apache.org/plugins/maven-assembly-plugin/assembly/1.1.1"
  xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
  xsi:schemaLocation="http://maven.apache.org/plugins/maven-assembly-plugin/assembly/1.1.1 http://maven.apache.org/xsd/assembly-1.1.1.xsd">
  <id>bin</id>
  <includeBaseDirectory>true</includeBaseDirectory>
  <formats>
    <format>dir</format>
    <format>zip</format>
  </formats>

  <fileSets>
    <fileSet>
      <directory>bin</directory>
      <outputDirectory>bin</outputDirectory>
      <fileMode>0755</fileMode>
    </fileSet>
    <fileSet>
      <directory>script</directory>
      <outputDirectory>script</outputDirectory>
    </fileSet>
    <fileSet>
      <directory>../jarboot-ui2/dist</directory>
      <outputDirectory>fe/jarboot</outputDirectory>
    </fileSet>
    <fileSet>
      <directory>../jarboot-server/target/smart-doc</directory>
      <outputDirectory>fe/api-doc</outputDirectory>
    </fileSet>
    <fileSet>
      <directory>../target/lib</directory>
      <outputDirectory>components/lib</outputDirectory>
    </fileSet>
  </fileSets>
  <files>
    <file>
      <source>../jarboot-agent/target/jarboot-agent-jar-with-dependencies.jar</source>
      <destName>components/jarboot-agent.jar</destName>
    </file>
    <file>
      <source>../jarboot-spy/target/jarboot-spy.jar</source>
      <destName>components/jarboot-spy.jar</destName>
    </file>
    <file>
      <source>../jarboot-core/target/jarboot-core.jar</source>
      <destName>components/jarboot-core.jar</destName>
    </file>
    <file>
      <source>../jarboot-server/target/jarboot-server.jar</source>
      <destName>components/jarboot-server.jar</destName>
    </file>
    <file>
      <source>../tools/target/jarboot-tools.jar</source>
      <destName>components/jarboot-tools.jar</destName>
    </file>
    <file>
      <source>../jarboot-server/src/main/resources/jarboot.properties</source>
      <destName>conf/jarboot.properties</destName>
    </file>
    <file>
      <source>../demo-server/target/demo-server.jar</source>
      <destName>workspace/default/demo-server/demo-server.jar</destName>
    </file>
    <file>
      <source>../plugins/shell-plugin/target/shell-plugin.jar</source>
      <destName>plugins/agent/shell-plugin.jar</destName>
    </file>
    <file>
      <source>conf/cluster.conf</source>
      <destName>conf/cluster.conf</destName>
    </file>
    <file>
      <source>../README.md</source>
      <destName>README.md</destName>
    </file>
    <file>
      <source>../README_CN.md</source>
      <destName>README_CN.md</destName>
    </file>
  </files>
</assembly>
